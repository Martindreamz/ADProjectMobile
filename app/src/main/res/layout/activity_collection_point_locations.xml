<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DelegateAuthorityActivity"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Welcome"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/selectCollectionPointTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/selectCollectionPoint"/>
        <Spinner
            android:id="@+id/selectCollectionPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="@string/selectCollectionPoint"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</LinearLayout>