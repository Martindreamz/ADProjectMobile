<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Store.InventoryCheckActivity"
    >
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:weightSum="1.0"
        app:layout_constraintTop_toTopOf="parent"
        >
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Here"
            android:iconifiedByDefault="false"
            android:layout_alignParentTop="true"
            />
        <TextView
        android:id="@+id/invtUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:text="@string/invtCheck"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ListViewLinear"
        app:layout_constraintLeft_toLeftOf="parent"
        />
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:id="@+id/header1"
                    android:layout_column="0"
                    android:padding="10sp"
                    android:gravity="left"
                    android:layout_span="2"
                    android:text="Code"
                    android:textStyle="bold"
                    android:background="#c0c0c0"
                    >
                </TextView>
                <TextView
                    android:id="@+id/header2"
                    android:layout_column="1"
                    android:padding="10sp"
                    android:gravity="left"
                    android:text="Description"
                    android:textStyle="bold"
                    android:background="#c0c0c0"
                    >
                </TextView>
                <TextView
                    android:id="@+id/header3"
                    android:layout_column="2"
                    android:padding="10sp"
                    android:gravity="left"
                    android:text="Qty"
                    android:textStyle="bold"
                    android:background="#c0c0c0"
                    >
                </TextView>
                <TextView
                    android:id="@+id/header4"
                    android:layout_column="3"
                    android:padding="10sp"
                    android:gravity="left"
                    android:text="Actual Qty"
                    android:textStyle="bold"
                    android:background="#c0c0c0"
                    >
                </TextView>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ListViewLinear"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:weightSum="1.0"
        app:layout_constraintTop_toBottomOf="@id/header"
        >


    <ListView
        android:id="@+id/StationeriesListView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />
    </LinearLayout>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="1.0">
        <Button style="@style/Btn"
            android:id="@+id/saveInvtCheckBtn"
            android:text="@string/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>